---
  import Heading from "../components/Heading.astro";

  export interface Props {
    title: string
    variation?: 1 | 2 | 3
  }

  const { title, variation } = Astro.props as Props;
---

<section class="flex flex-col pt-48">
  <Heading {variation}>{title}</Heading>
  <div class="pt-20 flex flex-col gap-4">
    <slot />
  </div>
</section>