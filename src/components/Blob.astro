---
  import heroBlob from '@assets/hero-blob.svg?raw';
  import blob1 from '@assets/blob1.svg?raw';
  import blob2 from '@assets/blob2.svg?raw';
  import blob3 from '@assets/blob3.svg?raw';


  export interface Props {
    height: number | string;
    className?: string;
    variation?: 1 | 2 | 3 | 'hero';
  }

  const { height, className, variation = 1 } = Astro.props as Props;

  const svgClass = `${className} absolute z-0`
  const blurClass = `${svgClass} blur-lg`;

  let blobHTML = blob1;
  if (variation === 2) blobHTML = blob2;
  if (variation === 3) blobHTML = blob3;
  if (variation === 'hero') blobHTML = heroBlob;
---

<svg class={svgClass} width={height} {height} set:html={blobHTML}></svg>
<svg class={blurClass} width={height} {height} set:html={blobHTML}></svg>