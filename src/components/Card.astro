---
  import type { ProjectCard, WorkCard } from "../cards";

  export interface Props {
    card: WorkCard | ProjectCard
  }

  const { card } = Astro.props as Props;
  const { title, description, tags, type } = card;

  let subtitle = null;
  if (type === 'work') {
    subtitle = `${card.company} â€¢ ${card.startDate} - ${card.endDate}`
  }
---

<div class="bg-gray-600 rounded-xl p-4 shadow-2xl">
  <h4 class="text-xl text-gray-200 font-medium">{title}</h4>
  <h5 class="text-sm text-gray-200 font-light mb-4">{subtitle}</h5>
  <p class="text-base text-gray-200">{description}</p>
  <div class="flex flex-wrap mt-4 gap-2">
    {tags.map((tag) => (
    <div class="bg-gray-400 px-2 py-1 rounded-full text-sm text-gray-50">
      {tag}
    </div>
    ))}
  </div>
</div>